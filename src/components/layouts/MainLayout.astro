---

import { ViewTransitions } from "astro:transitions";
import NaviMain from "./NaviMain.astro";
import FooterMain from "./FooterMain.astro";
import AlternoLayout from "./AlternoLayout.astro";


interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    <ViewTransitions />
		<title>{ title }</title>
	</head>
  <body class="min-h-screen bg-slate-400">
    <main class="bg-amber-50 container mx-auto">
      
        <AlternoLayout />
        <section class="p-4 border-b-8 border-slate-700">
          <slot />

          <FooterMain />
        </section>
        
      
      
    </main>
  </body>
</html>
